<h1><%= @application.name %></h1>

<h3>Address: </h3>
<p><%= @application.street_address %></p>
<p><%= @application.city %>, <%= @application.state %>
   <%= @application.zip_code %></p>

<h3>Reason for adoption: <%= @application.description %></h3>

<h3>Application Status: <%= @application.status %></h3>

<h3>Pets under consideration: </h3>
<% @application.pets.each do |pet| %>
<%= link_to "#{pet.name}", "/pets/#{pet.id}"%>
<br>
<% end %>

<% if @application.status == "In Progress" %>
  <h3>Now search for your new best friend!</h3>
  <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
    <%= f.label :search, "Search by name: " %>
    <%= f.text_field :search %>
    <%= f.submit "Give me the fuzz" %>
  <% end %>
<% end %>
<br>
<h3>Is this who you're looking for?</h3>
<h3 style="color:coral;">
  <% @pets.each do |pet| %>
    <%= pet.name %>
    <%= button_to "Adopt Me ❤️ ", "/applications/#{@application.id}", method: :get %>
  <% end %>
</h3>
