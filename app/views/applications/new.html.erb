<h1>Adoption Applicant Form</h1>

<%= form_with url: "/applications", method: :post, local: true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :street_address %>
<%= f.text_field :street_address %>
<br>
<%= f.label :city %>
<%= f.text_field :city %>
<br>
<%= f.label :state %>
<%= f.text_field :state %>
<br>
<%= f.label :zip_code %>
<%= f.text_field :zip_code %>
<br>
<h3>Tell us why you would make a good home for one of our furry friends: </h3>
<%= f.label :description %>
<%= f.text_area :description %>
<br>
<br>
<%= f.submit "Submit"%>
<% end %>
